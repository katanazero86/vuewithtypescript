{
  "compilerOptions": {
    "target": "es5", //빌드 결과물 JS 버전
    "module": "esnext",
    "strict": true, //엄격모드
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node", //모듈 해석방식
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  //빌드 포함
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  // 빌드예외
  "exclude": [
    "node_modules"
  ]
}
